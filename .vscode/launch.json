{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Current File",
      "program": "${file}",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    {
      "name": "launch nodemon server",
      "request": "launch",
      "runtimeExecutable": "nodemon",
      "program": "server.js",
      "type": "pwa-node",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "restart": true,
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}